        "action": task,
        "args": []
    },
    "notification": {
        "action": notifications,
        "args": []
    },
    "health": {
        "action": health,
        "args": []
    },
    "deploy": {
        "action": deploy,
        "args": []
    },
    "fact": {
        "action": fact,
        "args": [{
            "args": ["--delete"],
            "params": {
                "dest": "delete",
                "action": "store_true",
                "help": "Delete current orchestrator data.",
                "default": False
            }
        }, {
            "args": ["--download"],
            "params": {
                "dest": "download",
                "action": "store_true",
                "help": "Download current orchestrator data.",
                "default": False
            }
        }, {
            "args": ["--upload"],
            "params": {
                "dest": "upload",
                "action": "store_true",
                "help": "Upload current orchestrator data.",
                "default": False
            }
        }, {
            "args": ["--default"],
            "params": {
                "dest": "default",
                "action": "store_true",
                "help": "Download default orchestrator data.",
                "default": False
            }
        }, {
            "args": ["-d", "--dir"],
            "params": {
                "dest": "dir",
                "action": "store",
                "help": "Directory with orchestrator data.",
                "default": None
            }
        }]
    }
}


substitutions = {
    "env": "environment",
    "net": "network",
    "rel": "release",
    "list": "--list",
    "set": "--set",
    "delete": "--delete",
    "download": "--download",
    "upload": "--upload",
    "default": "--default",
    "create": "--create",
    "remove": "--remove"
}

if __name__ == '__main__':
    sys.argv = map(
        lambda x: substitutions.get(x, x),
        sys.argv
    )

    for argument in ["--json", "--debug"]:
        if argument in sys.argv:
            sys.argv.remove(argument)
            sys.argv.insert(1, argument)

    for argument in ["--env", "--env-id"]:
        if argument in sys.argv:
            index_of_inv = sys.argv.index(argument)
            sys.argv.pop(index_of_inv)
            env = sys.argv.pop(index_of_inv)
            sys.argv.insert(1, env)
            sys.argv.insert(1, argument)
            break

    parser = argparse.ArgumentParser()
    parser.add_argument("--env", "--env-id",
                        dest="eid",
                        action="store",
                        type=str,
                        help="environment id",
                        default=None
                        )
    parser.add_argument("--json",
                        dest="json",
                        action="store_true",
                        help="prints to only json to stdout",
                        default=False
                        )
    parser.add_argument("--debug",
                        dest="debug",
                        action="store_true",
                        help="prints details of all HTTP request",
                        default=False
                        )
    subparsers = parser.add_subparsers(
        dest="action", help='actions'
    )

    for action, params in actions.iteritems():
        action_parser = subparsers.add_parser(
            action, help=params["action"].__doc__
        )
        for arg in params.get("args", []):
            action_parser.add_argument(
                *arg["args"],
                **arg["params"]
            )

    params, other_params = parser.parse_known_args()
    sys.argv.pop(1)
    DEBUG = params.debug
    JSON = params.json
    if params.action not in actions:
        parser.print_help()
        sys.exit(0)
    current_action = getattr(params, "action")
    delattr(params, "action")
    actions[current_action]["action"](params)
