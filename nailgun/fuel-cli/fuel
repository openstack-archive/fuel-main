    """Show tasks
    """
    get_response = json_api_get_request("tasks/")
    if params.json:
        print(json.dumps(get_response, indent=4))


def notifications(params):
    """Show notifications
    """
    print(params)


def health(params):
    """Perform health check for environments
    """
    print(params)


def deploy(params):
    """Deploy changes to environments
    """
    check_for_attributes(params, ["eid"])
    put_response = json_api_put_request(
        "clusters/{0}/changes".format(params.eid),
        {}
    )
    if params.json:
        print(json.dumps(put_response, indent=4))
    else:
        print_deploy_progress(params.eid)


def get_bar_for_progress(full_width, progress):
    number_of_equal_signs = int(
        math.ceil(progress * float(full_width-2)/100)
    )
    return "[{0}{1}{2}]".format(
        "=" * number_of_equal_signs,
        ">" if number_of_equal_signs < full_width-2 else "",
        " " * (full_width-3-number_of_equal_signs)
    )


def print_deploy_progress(eid):
    stdscr = curses.initscr()
    curses.noecho()
    curses.cbreak()
    tasks = json_api_get_request("tasks?cluster_id={0}".format(eid))
    deploy_task = filter(
        lambda x: x.get("name", "") == "deploy",
        tasks
    )[0]
    deploy_task_id = deploy_task["id"]
    progress = 0
    get_bar = partial(get_bar_for_progress, 80)
    try:
        while progress != 100:
            task_response = json_api_get_request(
                "tasks/{0}/".format(deploy_task_id)
            )
            progress = task_response["progress"]
            nodes = json_api_get_request(
                "nodes?cluster_id={0}"
                .format(eid)
            )
            sorted(nodes, key=lambda node: node.get("id"))
            stdscr.addstr(0, 0,
                          "Deploying changes to environment with id={0}"
                          .format(eid)
                          )
            stdscr.addstr(1, 0, "Deployment: {0} {1:4.0%}".format(
                get_bar(progress),
                progress/100.0
            ))
            for index, node in enumerate(nodes):
                stdscr.addstr(index + 2, 0,
                              "Node{0:3} {1:13}: {2} {3:4.0%}".format(
                                  node["id"],
                                  node["status"],
                                  get_bar(node["progress"]),
                                  node["progress"]/100.0
                              )
                              )
            sleep(0.25)
            stdscr.refresh()
    finally:
        curses.echo()
        curses.nocbreak()
        curses.endwin()


def fact(params):
    """Show computed facts for orchestrator
    """
    check_for_attributes(params, ["eid"])

    dir_name = os.path.join(
        os.path.abspath(os.path.curdir
                        if params.dir is None else params.dir),
        "cluster_{0}".format(params.eid)
    )

    if params.default:
        facts = json_api_get_request(
            "clusters/{0}/orchestrator/defaults"
            .format(params.eid)
        )
        write_facts_to_dir(facts, dir_name)
    elif params.upload:
        put_response = json_api_put_request(
            "clusters/{0}/orchestrator/"
            .format(params.eid),
            parse_fact_from_dir(dir_name)
        )
        if params.json:
            print(json.dumps(put_response, indent=4))
        else:
            print(
                "Facts uploaded successfully."
            )
    elif params.delete:
        json_api_delete_request(
            "clusters/{0}/orchestrator/"
            .format(params.eid),
        )
    else:
        facts = json_api_get_request(
            "clusters/{0}/orchestrator/"
            .format(params.eid),
        )
        if not facts and not json:
            print(
                "Environment with id={0} has no facts."
                .format(params.eid)
            )
            return
        if params.download:
            write_facts_to_dir(facts, dir_name)
        else:
            if params.json:
                print(json.dumps(facts, indent=4))


def read_json(path):
        with open(path, "r") as json_file:
            return json.loads(json_file.read())


def parse_fact_from_dir(dir_name):
    if not os.path.exists(dir_name):
        path_to_folder = dir_name.split(os.sep)
        one_folder_up = path_to_folder[:-2] + path_to_folder[-2:-1]
        dir_name = os.sep.join(one_folder_up)
    try:
        return map(
            read_json,
            [os.path.join(dir_name, json_file)
             for json_file in os.listdir(dir_name)
             if json_file.endswith('.json')]
        )
    except OSError:
        print(
            "Directory {0} doesn't exist."
            .format(dir_name)
        )


def write_facts_to_dir(facts, dir_name):
    if os.path.exists(dir_name):
        shutil.rmtree(dir_name)
        print("old directory {0} was removed".format(dir_name))
    os.makedirs(dir_name)
    print("directory {0} was created".format(dir_name))
    for fact in facts:
        fd = open(
            os.path.join(
                dir_name,
                "{role}_{uid}.json".format(**fact)
            ),
            "w+"
        )
        fd.write(json.dumps(fact, indent=4))
        print("Created {0}".format(fd.name))
        fd.close()


def parse_node_ids(x):
    """Parse arguments with commas and spaces

    :returns: list of lists with numbers
    """
    filtered = [y for y in x.split(",") if y.strip() != '']
    if len(filtered) > 1:
        return map(int, filtered)
    elif len(filtered) == 1:
        return [int(filtered[0])]
    else:
        return None


