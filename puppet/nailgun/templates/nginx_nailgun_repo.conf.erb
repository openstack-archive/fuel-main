server {
    listen   8080;

    server_name localhost;

    access_log on;
    error_log /var/log/nginx/error.log debug;

    charset utf-8;
    client_max_body_size 2M;

    location / {
        autoindex on;
        root /var/www/nailgun;
    }

    location ~ /\.ht {
        deny  all;
    }

}
