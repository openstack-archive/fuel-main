LISTEN_ADDRESS: "127.0.0.1"
LISTEN_PORT: "8001"
DEVELOPMENT: "0"

DATABASE:
  engine: "<%= database_engine %>"
  name: "<%= database_name %>"
  host: "<%= database_host %>"
  port: "<%= database_port %>"
  user: "<%= database_user %>"
  passwd: "<%= database_passwd %>"

STATIC_DIR: "<%= staticdir %>"
TEMPLATE_DIR: "<%= templatedir %>"
NETWORK_POOLS:
  public:
    - "240.0.0.0/16"
  private10:
    - "10.0.0.0/8"
  private172:
    - "172.16.0.0/12"
  private192:
    - "192.168.0.0/16"

NET_EXCLUDE:
  - "<%= @exclude_network %>/<%= @exclude_cidr %>"

ADMIN_NETWORK:
  cidr: "<%= @admin_network %>/<%= @admin_network_cidr %>"
  netmask: "<%= @admin_network_netmask %>"
  size: "<%= @admin_network_size %>"
  first: "<%= @admin_network_first %>"
  last: "<%= @admin_network_last %>"

VLANS_RANGE_START: "100"
VLANS_RANGE_END: "1000"

RABBITMQ:
  fake: "0"
  hostname: "127.0.0.1"
  port: 5672
  userid: "<%= rabbitmq_naily_user %>"
  password: "<%= rabbitmq_naily_password %>"
  virtual_host: "/"

APP_LOG: "/var/log/nailgun/app.log"
API_LOG: "/var/log/nailgun/api.log"

PATH_TO_SSH_KEY: "/root/.ssh/id_rsa"
PATH_TO_BOOTSTRAP_SSH_KEY: "/root/.ssh/bootstrap.rsa"

MASTER_IP: "<%= ipaddress %>"

COBBLER_URL: "<%= scope.lookupvar('nailgun::cobbler_url') %>"
COBBLER_USER: "<%= cobbler_user %>"
COBBLER_PASSWORD: "<%= cobbler_password %>"
COBBLER_PROFILE: "centos-x86_64"

MCO_PSKEY: "<%= mco_pskey %>"
MCO_VHOST: "<%= mco_vhost %>"
MCO_HOST: <%= scope.lookupvar('nailgun::mco_host') %>
MCO_USER: "<%= mco_user %>"
MCO_PASSWORD: "<%= mco_password %>"
MCO_CONNECTOR: "<%= mco_connector %>"

PUPPET_MASTER_HOST: "<%= puppet_master_hostname %>"
PUPPET_VERSION: "2.7.19"

DNS_DOMAIN: "<%= domain %>"
DNS_SERVERS: "<%= scope.lookupvar('nailgun::puppet_master_ip') %>"
DNS_SEARCH: "<%= domain %>"
