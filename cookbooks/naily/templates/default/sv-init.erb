#!/bin/sh

### BEGIN INIT INFO
# Provides:          nginx
# Required-Start:    $local_fs $remote_fs $network $syslog
# Required-Stop:     $local_fs $remote_fs $network $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: starts the naily backend server
# Description:       starts naily using start-stop-daemon
### END INIT INFO

PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
DAEMON=$(which nailyd)
NAME=nailyd
DESC=naily

test -x $DAEMON || exit 0

set -e

. /lib/lsb/init-functions

DAEMON_OPTS="--config /etc/naily/nailyd.conf --daemonize --pidfile /var/run/$NAME.pid --logfile /var/log/$NAME.log --loglevel info"

case "$1" in
	start)
		echo -n "Starting $DESC: "
		start-stop-daemon --start --quiet --pidfile /var/run/$NAME.pid \
		    --name $NAME --startas $DAEMON -- $DAEMON_OPTS || true
		echo "$NAME."
		;;

	stop)
		echo -n "Stopping $DESC: "
		start-stop-daemon --stop --quiet --pidfile /var/run/$NAME.pid \
		    --name $NAME || true
		echo "$NAME."
		;;

	restart)
		echo -n "Restarting $DESC: "
    start-stop-daemon --stop --quiet --pidfile /var/run/$NAME.pid \
        --name $NAME || true
		sleep 1
    start-stop-daemon --start --quiet --pidfile /var/run/$NAME.pid \
        --name $NAME --startas $DAEMON -- $DAEMON_OPTS || true
		echo "$NAME."
		;;

	status)
		status_of_proc -p /var/run/$NAME.pid "$DAEMON" $NAME && exit 0 || exit $?
		;;
	*)
		echo "Usage: $NAME {start|stop|restart|status}" >&2
		exit 1
		;;
esac

exit 0
